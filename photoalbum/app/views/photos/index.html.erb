<div class = "col-md-6 col-md-offset-3" id = "main-header">
<h1 class = "col-md-6 col-md-offset-3">My Photo Album</h1>
</div>

<div class = "col-md-6 col-md-offset-3" id = "new">
<%= link_to "New photo", new_photo_path, class: "col-md-6 col-md-offset-4" %>
</div>

<div class = "col-md-10 col-md-offset-1">
<table class="table table-striped table-condensed">
  <% @photos.each do |photo| %>
    <tr>
      <td><%= photo.title %></td>
      <td><%= link_to "Show", photo_path(photo) %></td>
      <td><%= link_to "Edit", edit_photo_path(photo) %></td>
      <td><%= link_to "Destroy", photo_path(photo), method: :delete, data:{confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>
</div>
